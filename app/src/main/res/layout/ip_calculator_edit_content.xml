<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:nsak="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.nsak.android.ui.view.LabeledEditTextLayout
            android:id="@+id/ip_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            nsak:inputType="ipAddress"
            nsak:hint="@string/ip_address"
            nsak:label="@string/ip_address"/>

        <com.nsak.android.ui.view.LabeledEditTextLayout
            android:id="@+id/mask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            nsak:inputType="ipAddress"
            nsak:hint="@string/mask_or_cidr"
            nsak:label="@string/mask_or_cidr"/>


        <ImageView
            android:id="@+id/do_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>

</LinearLayout>