<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/host_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/network_info_label"
        style="@style/ListItemFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="16dp"
        android:text="Network Info"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/device_info_section_labels"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ip_address"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/host_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/netbios_name_label"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/netbios_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/host_ip"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/host_name"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/netbios_name"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/device_info_label"
        style="@style/ListItemFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Device Info"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/device_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/labels"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/host_name_label"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mac_address"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vendor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/host_mac"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/host_vendor"
                    style="@style/ListItemFont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>